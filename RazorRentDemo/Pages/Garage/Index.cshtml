@page
@model RazorRentDemo.Pages.Garage.IndexModel

@{
    ViewData["Title"] = "Garaj";
}

<h1 class="display-2">Garaj</h1>

<p>
    <a asp-page="Create">Add New Car</a>
</p>
<table id="garageTable" class="table">
    <thead>
        <tr>
            <th>
                Brand
            </th>
            <th>
                UnitPrice
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Car[0].Avaliable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Car) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                    @{
                        var result = item.Avaliable ? "OK" : "N/A";
                    }
                    @result
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<partial name="_Notification" />

@section Scripts{
    @*document ready derken dom yüklendi browser html i görüyor
        .ready( fonction ->neyi tetikleyecek)
    *@
    <script type="text/javascript">
        $(document).ready(function () {
            $('#garageTable').DataTable();
        });
    </script>
    }
