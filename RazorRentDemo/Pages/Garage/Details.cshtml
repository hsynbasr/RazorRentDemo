@page
@model RazorRentDemo.Pages.Garage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Brand
        </dt>
        <dd class="col-sm-10">
            @Model.Car.Brand
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.UnitPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Avaliable)
        </dt>
        <dd class="col-sm-10">
            @{
                var result = Model.Car.Avaliable ? "OK" : "N/A";
            }
            @result
        </dd>
    </dl>
    <div>
        <a class="btn btn-primary w-25" asp-page="./Edit" asp-route-id="@Model.Car?.Id">Edit</a>
    </div>
    <div>

        <a class="btn btn-danger w-25" asp-page="./Index">Back to List</a>
    </div>
</div>

